<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS и Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <link rel="icon" type="image/x-icon" href="/favicon.ico?v=2">
    <link rel="stylesheet" href="~/css/header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/body.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Website_Progress.styles.css" asp-append-version="true" />
</head>

<body>

    <!-- Здесь должен быть Header -->
    @await Html.PartialAsync("Header")

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Здесь должен быть Footer -->
    @await Html.PartialAsync("Footer")


    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const btn = document.getElementById("themeToggle");

        if (btn && localStorage.getItem("theme") === "light") {
            document.body.classList.add("light");
            btn.innerHTML = '<i class="bi bi-sun-fill"></i>';
        }

        btn?.addEventListener("click", () => {
            document.body.classList.toggle("light");

            if (document.body.classList.contains("light")) {
                localStorage.setItem("theme", "light");
                btn.innerHTML = '<i class="bi bi-sun-fill"></i>';
            } else {
                localStorage.setItem("theme", "dark");
                btn.innerHTML = '<i class="bi bi-moon-stars-fill"></i>';
            }
        });

        document.addEventListener("DOMContentLoaded", () => {

            // Анимация для reveal
            const observer = new IntersectionObserver(entries => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add("active");
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.15 });

            document.querySelectorAll(".reveal").forEach(el => observer.observe(el));

            // =======================
            // Telegram ссылки
            // =======================
            const tgLinks = document.querySelectorAll('.tg-link');
            const username = 'YgorGrupStar'; // <-- сюда свой Telegram username

            tgLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();

                    const tgAppUrl = `tg://resolve?domain=${username}`;
                    const webUrl = `https://t.me/${username}`;
                    // создаем временный iframe для открытия tg://
                    const iframe = document.createElement('iframe');
                    iframe.style.display = 'none';
                    iframe.src = tgAppUrl;
                    document.body.appendChild(iframe);

                    // через 500мс открываем веб-версию в новой вкладке
                    setTimeout(() => {
                        window.open(webUrl, '_blank');
                        document.body.removeChild(iframe);
                    }, 500);

                    // уведомление пользователю
                    alert('Если у вас установлен Telegram Desktop, он откроется. В противном случае откроется веб-версия.');

                });
            });
                    // =======================
        // MAIL ссылки (Mail.ru)
        // =======================
        const mailLinks = document.querySelectorAll('.mail-link');
        const email = 'alex04120445@mail.ru';

        mailLinks.forEach(link => {
            link.addEventListener('click', function (e) {
                e.preventDefault();

                const mailtoUrl = `mailto:${email}`;
                const mailruUrl = `https://e.mail.ru/compose/?to=${email}`;

                // создаём скрытый iframe для mailto
                const iframe = document.createElement("iframe");
                iframe.style.display = "none";
                iframe.src = mailtoUrl;
                document.body.appendChild(iframe);

                // если почтовик не открылся — через 700мс откроем mail.ru
                setTimeout(() => {
                    window.open(mailruUrl, "_blank");
                    document.body.removeChild(iframe);
                }, 700);
            });
        });

        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const btn = document.getElementById("scrollTopBtn");

            window.addEventListener("scroll", () => {
                if (window.scrollY > 300) {
                    btn.classList.add("show");
                } else {
                    btn.classList.remove("show");
                }
            });
        });
    </script>

    <!-- Кнопка Наверх -->
    <aside>
        <a href="#" id="scrollTopBtn" title="Наверх">
            <i class="bi bi-arrow-up-short"></i>
        </a>
    </aside>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
